<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:radius="14dp"
    android:elevation="1dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- ICON -->
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_soft"
            android:text="ðŸŽ°"
            android:textSize="20sp"
            android:gravity="center"/>

        <!-- DETAILS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/txtGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jackpot"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#7C3AED"/>

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18/12/2025 â€¢ 18:32"
                android:textSize="11sp"
                android:textColor="#64748B"
                android:layout_marginTop="4dp"/>

            <!-- BET -->
            <TextView
                android:id="@+id/txtBet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bet: â‚¹10"
                android:textSize="12sp"
                android:textColor="#475569"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- WIN + STATUS -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/txtWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+â‚¹20"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#16A34A"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIN"
                android:textSize="11sp"
                android:textColor="#16A34A"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
