<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:radius="12dp"
    android:elevation="6dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row 1: Transaction Type + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Game Join"
                android:textColor="#111827"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PENDING"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="end"
                android:textColor="#FFA500"/>
        </LinearLayout>

        <!-- Row 2: Amount + Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/txtBetAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount: ₹0.2"
                android:textSize="14sp"
                android:textColor="#1F2937"/>

            <TextView
                android:id="@+id/txtWinAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance: ₹20736.33"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:layout_gravity="end"/>
        </LinearLayout>

        <!-- Row 3: Date + Transaction ID -->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="26 Dec 2025, 03:00 PM"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/txtTransactionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#TX123456"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
