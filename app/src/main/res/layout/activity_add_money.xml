<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan &amp; Pay"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0F172A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick payment verification"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:layout_marginBottom="12dp" />

        <!-- ================= STEP INDICATOR ================= -->
        <LinearLayout
            android:id="@+id/layoutStepIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- STEP 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStep1Circle"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_step_active" />

                <TextView
                    android:id="@+id/tvStep1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan &amp; Pay"
                    android:textSize="11sp"
                    android:textColor="#2563EB"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- LINE -->
            <View
                android:id="@+id/viewStepLine"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginHorizontal="12dp"
                android:background="#CBD5E1" />

            <!-- STEP 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStep2Circle"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="#64748B"
                    android:background="@drawable/bg_step_inactive" />

                <TextView
                    android:id="@+id/tvStep2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify"
                    android:textSize="11sp"
                    android:textColor="#64748B"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- ================= SCAN & PAY ================= -->
        <LinearLayout
            android:id="@+id/layoutScanPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scan &amp; Pay"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#0F172A"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scan QR and enter amount"
                        android:textSize="12sp"
                        android:textColor="#64748B"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <!-- QR BOX -->
                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:gravity="center"
                        android:background="@drawable/bg_qr_box"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/imgQR"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:src="@drawable/qr_image" />
                    </LinearLayout>

                    <!-- AMOUNT -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Enter Amount (₹)"
                        android:textSize="12sp"
                        android:textColor="#334155" />

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="6dp"
                        android:hint="₹ 0.00"
                        android:inputType="number"
                        android:background="@drawable/bg_input"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Minimum: ₹10"
                        android:textSize="11sp"
                        android:textColor="#64748B"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/btnEnterAmount"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Enter Amount"
                        android:layout_marginTop="14dp"
                        android:enabled="false"
                        android:backgroundTint="#E2E8F0"
                        android:textColor="#64748B" />

                    <!-- HOW TO PAY -->
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_how_to_pay"
                        android:padding="12dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How to Pay"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#2563EB" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1. Scan QR with UPI app\n2. Enter amount and pay\n3. Take screenshot"
                            android:textSize="11sp"
                            android:textColor="#1E40AF" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ================= VERIFY PAYMENT ================= -->
        <LinearLayout
            android:id="@+id/layoutVerifyPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- CHECK ICON -->
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check_circle"
                        android:tint="#16A34A" />

                    <!-- TITLE -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verify Payment"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#0F172A"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provide UTR or screenshot"
                        android:textSize="12sp"
                        android:textColor="#64748B"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <!-- AMOUNT ROW -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="@drawable/bg_light_gray_rounded">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount:"
                            android:textSize="13sp"
                            android:textColor="#334155" />

                        <TextView
                            android:id="@+id/tvVerifyAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹50"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#0F172A" />
                    </LinearLayout>

                    <!-- UTR -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UTR Number"
                        android:textSize="12sp"
                        android:textColor="#334155"
                        android:layout_marginTop="16dp" />

                    <EditText
                        android:id="@+id/etUTR"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter UTR (optional)"
                        android:inputType="number"
                        android:background="@drawable/bg_input"
                        android:padding="12dp"
                        android:layout_marginTop="6dp" />

                    <!-- OR -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#94A3B8"
                        android:layout_marginVertical="12dp" />

                    <!-- UPLOAD SCREENSHOT -->
                    <LinearLayout
                        android:id="@+id/layoutUpload"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_upload_box">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/upload"
                            android:tint="#2563EB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Screenshot"
                            android:textSize="12sp"
                            android:textColor="#2563EB"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- ACTION BUTTONS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/btnBack"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="← Back"
                            android:backgroundTint="#64748B"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Submit"
                            android:backgroundTint="#22C55E"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Provide either UTR or screenshot to verify"
                        android:textSize="11sp"
                        android:textColor="#64748B"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- SECURE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Secure Payment\n256-bit SSL encryption"
            android:textSize="11sp"
            android:textColor="#64748B" />

    </LinearLayout>
</ScrollView>
