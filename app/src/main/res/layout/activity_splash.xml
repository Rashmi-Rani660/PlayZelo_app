<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232a5c">

    <!-- Top Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/play_zelo_logo"
        android:contentDescription="Logo"
        android:scaleType="centerInside" />

    <!-- Center Lottie Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/centerAnimation"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/games_icon"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/splashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to PlayZelo"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/centerAnimation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />

    <!-- Bottom Lottie Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bottomAnimation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:lottie_rawRes="@raw/loader1"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

</RelativeLayout>
