                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:background="@drawable/circle_bg"
                android:padding="2dp" />

            <TextView
