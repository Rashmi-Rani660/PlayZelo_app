<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68A6FF"
    android:padding="32dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/teenpattilogoo2"
        android:background="@drawable/rounded_corner_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lottieOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- First Lottie Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieOne"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_rawRes="@raw/minesbomb"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="2.0"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Second Lottie Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieTwo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/aniloading"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toBottomOf="@id/lottieOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
