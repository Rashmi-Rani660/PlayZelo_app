<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8F1FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Top green title bar -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Antpay"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="@drawable/bg_green_header"
            android:layout_marginBottom="12dp"/>

        <!-- White card area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_card"
            android:padding="16dp">

            <!-- top strip with orderId/amount/time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_green_strip"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250820124534716388"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 10000"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tvTimeShort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:47"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-08-20 12:45:34"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- QR label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QR"
                android:textColor="#888888"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"/>

            <!-- QR image -->
            <ImageView
                android:id="@+id/imgQr"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/qr_image"
                android:contentDescription="QR Code"
                android:background="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do not use same QR code to pay multiple times"
                android:textColor="#999999"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <!-- Account row + Copy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#EAF8EF"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="6dp">

                <EditText
                    android:id="@+id/etAccount"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:hint="account  boim-418211660652@boi"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:inputType="textCapCharacters"/>

                <Button
                    android:id="@+id/btnCopy"
                    android:layout_width="72dp"
                    android:layout_height="36dp"
                    android:text="Copy"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_green" />
            </LinearLayout>

            <!-- UTR input + Submit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="6dp">

                <EditText
                    android:id="@+id/etUtr"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:hint="UTR / UPIRef No / UPI Transaction Id"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:inputType="textCapCharacters"/>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="86dp"
                    android:layout_height="44dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_green" />
            </LinearLayout>

            <!-- Contact us -->
            <TextView
                android:id="@+id/tvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact us"
                android:textColor="#1A73E8"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. please, contact us if you have any payment issue:\nGopaycomplaintdeal@gmail.com"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
